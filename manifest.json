{
    "manifest_version": 3,
    "name": "Text Converter Extension",
    "version": "1.0",
    "description": "Convert text between languages",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
      }
    },
    "icons": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  }